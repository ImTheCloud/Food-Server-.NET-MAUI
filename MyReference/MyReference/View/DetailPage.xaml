<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyReference.View.DetailPage"
             Title="Inventaire">




    <Grid Padding="10" RowSpacing="10" ColumnDefinitions="*,*" RowDefinitions="Auto,*" BackgroundColor="Grey">
        <Button Text="Afficher l'inventaire" 
                     Grid.Row="0" 
                     Grid.Column="0"
                     HeightRequest="60"
                     WidthRequest="200"
                     HorizontalOptions="Start"
                     Command="{Binding FoodFromJSONCommand}"
                     IsEnabled="{Binding IsNotBusy}"
                     BackgroundColor="DarkGray"
                     TextColor="White" />

    </Grid>



</ContentPage>